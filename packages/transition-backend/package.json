{
    "engines": {
        "node": ">=22.0.0"
    },
    "name": "transition-backend",
    "version": "0.2.0-2",
    "description": "Transportation and travel survey analysis and simulation platform - backend",
    "repository": "github.com/chairemobilite/transition",
    "license": "MIT",
    "scripts": {
        "clean": "rimraf lib/",
        "compile": "tsc",
        "compile:dev": "tsc -w",
        "list-tasks": "yarn node lib/scripts/listTasks.task.js",
        "migrate": "knex migrate:latest --knexfile lib/config/knexfile.js",
        "migrate:rollback": "knex migrate:down --knexfile lib/config/knexfile.js",
        "migrate-test": "cross-env NODE_ENV=test knex migrate:latest --knexfile lib/config/knexfile.js",
        "migrate-test:rollback": "cross-env NODE_ENV=test knex migrate:down --knexfile lib/config/knexfile.js",
        "start": "yarn node --max-old-space-size=4096 lib/server.js",
        "start:tracing": "yarn node -r ../../tracing.js  --max-old-space-size=4096 lib/server.js",
        "start:debug": "cross-env DEBUG=express:* yarn node --trace-warnings --max-old-space-size=4096 lib/server.js",
        "start:test": "cross-env NODE_ENV=test DEBUG=express:* yarn node --trace-warnings --max-old-space-size=4096 lib/server.js",
        "test": "cross-env NODE_ENV=test jest --config=jest.config.js",
        "test:unit": "cross-env NODE_ENV=test jest --config=jest.config.js",
        "test:sequential": "cross-env NODE_ENV=test jest --config=jest.sequential.config.js --runInBand",
        "test:ui": "echo 'no tests to run for this workspace'",
        "lint": "eslint .",
        "format": "prettier-eslint $PWD/'src/**/*.{ts,tsx}' --write"
    },
    "dependencies": {
        "@turf/turf": "^7.1.0",
        "@unified-latex/unified-latex-util-align": "^1.8.1",
        "@unified-latex/unified-latex-util-parse": "^1.8.1",
        "@unified-latex/unified-latex-util-to-string": "^1.8.1",
        "capnp-ts": "^0.4.0",
        "chaire-lib-backend": "^0.2.2",
        "chaire-lib-common": "^0.2.2",
        "connect-session-knex": "^4.0.0",
        "express": "^4.21.1",
        "express-session": "^1.18.1",
        "express-socket.io-session": "^1.3.5",
        "geobuf": "^3.0.2",
        "geojson": "^0.5.0",
        "geokdbush": "^1.1.0",
        "glob": "^11.0.0",
        "gtfs-types": "^2.1.0",
        "i18next": "^23.16.8",
        "inquirer": "^8.2.4",
        "jszip": "^3.10.1",
        "knex": "^3.1.0",
        "knex-postgis": "^0.14.3",
        "lodash": "^4.17.21",
        "moment": "^2.30.1",
        "morgan": "^1.10.0",
        "node-stream-zip": "^1.15.0",
        "p-queue": "^6.6.2",
        "papaparse": "^5.3.1",
        "passport": "^0.7.0",
        "pbf": "^3.2.1",
        "polygon-clipping": "^0.15.3",
        "proj4": "^2.7.5",
        "random": "^3.0.6",
        "serve-favicon": "^2.5.0",
        "slugify": "^1.6.3",
        "socket.io": "^2.5.1",
        "socketio-wildcard": "^2.0.0",
        "transition-common": "^0.2.0-2",
        "typescript": "^5.7.2",
        "uuid": "^11.0.3",
        "workerpool": "^6.2.1",
        "yargs": "^17.7.2",
        "zod": "^3.22.3"
    },
    "devDependencies": {
        "@types/express-socket.io-session": "^1.3.9",
        "@types/geojson": "^7946.0.14",
        "@types/inquirer": "^8.2.1",
        "@types/jest": "^29.5.14",
        "@types/lodash": "^4.17.13",
        "@types/node": "^22.9.0",
        "@types/p-queue": "^3.2.1",
        "@types/papaparse": "^5.2.6",
        "@types/proj4": "^2.5.2",
        "@types/socket.io-client": "^1.4.36",
        "@types/socketio-wildcard": "^2.0.4",
        "@types/uuid": "^8.3.1",
        "@types/workerpool": "^6.1.0",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.57.0",
        "eslint-plugin-n": "^15.7.0",
        "jest": "^29.7.0",
        "jest-each": "^29.7.0",
        "jest-fetch-mock": "^3.0.3",
        "prettier-eslint-cli": "^8.0.1",
        "socket.io-client": "^2.5.0",
        "stream-mock": "^2.0.5",
        "ts-jest": "^29.2.5"
    }
}
