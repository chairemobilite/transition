{
    "engines": {
        "node": ">=18.0.0"
    },
    "name": "transition-backend",
    "version": "0.2.0-2",
    "description": "Transportation and travel survey analysis and simulation platform - backend",
    "repository": "github.com/chairemobilite/transition",
    "license": "MIT",
    "scripts": {
        "clean": "rimraf lib/",
        "compile": "tsc",
        "compile:dev": "tsc -w",
        "list-tasks": "yarn node lib/scripts/listTasks.task.js",
        "migrate": "knex migrate:latest --knexfile lib/config/knexfile.js",
        "migrate:rollback": "knex migrate:down --knexfile lib/config/knexfile.js",
        "migrate-test": "cross-env NODE_ENV=test knex migrate:latest --knexfile lib/config/knexfile.js",
        "start": "yarn node lib/server.js --max-old-space-size=4096",
        "start:tracing": "yarn node -r ../../tracing.js lib/server.js --max-old-space-size=4096",
        "start:debug": "cross-env DEBUG=express:* yarn node --trace-warnings lib/server.js --max-old-space-size=4096",
        "start:test": "cross-env NODE_ENV=test DEBUG=express:* yarn node --trace-warnings lib/server.js --max-old-space-size=4096",
        "test": "cross-env NODE_ENV=test jest --config=jest.config.js",
        "test:unit": "cross-env NODE_ENV=test jest --config=jest.config.js",
        "test:sequential": "cross-env NODE_ENV=test jest --config=jest.sequential.config.js --runInBand",
        "test:ui": "echo 'no tests to run for this workspace'",
        "lint": "eslint .",
        "format": "prettier-eslint $PWD/'src/**/*.{ts,tsx}' --write"
    },
    "dependencies": {
        "@turf/turf": "^6.3.0",
        "body-parser": "^1.19.0",
        "capnp-ts": "^0.4.0",
        "chaire-lib-backend": "^0.2.2",
        "chaire-lib-common": "^0.2.2",
        "connect-session-knex": "^3.0.1",
        "express": "^4.17.3",
        "express-session": "^1.17.1",
        "express-socket.io-session": "^1.3.5",
        "geobuf": "^3.0.2",
        "geojson": "^0.5.0",
        "geokdbush": "^1.1.0",
        "glob": "^7.2.3",
        "gtfs-types": "^2.1.0",
        "i18next": "^22.4.15",
        "inquirer": "^8.2.4",
        "jszip": "^3.10.1",
        "knex": "^2.4.2",
        "knex-postgis": "^0.14.3",
        "lodash": "^4.17.21",
        "moment": "^2.29.4",
        "morgan": "^1.10.0",
        "node-stream-zip": "^1.15.0",
        "p-queue": "^6.6.2",
        "papaparse": "^5.3.1",
        "pbf": "^3.2.1",
        "proj4": "^2.7.5",
        "random": "^3.0.6",
        "request-ip": "^2.1.3",
        "serve-favicon": "^2.5.0",
        "slugify": "^1.6.3",
        "socket.io": "^2.4.0",
        "socketio-wildcard": "^2.0.0",
        "transition-common": "^0.2.0-2",
        "typescript": "^4.9.4",
        "uuid": "^8.3.2",
        "workerpool": "^6.2.1",
        "yargs": "^17.5.1",
        "zod": "^3.22.3"
    },
    "devDependencies": {
        "@types/express-socket.io-session": "^1.3.6",
        "@types/geojson": "^7946.0.7",
        "@types/inquirer": "^8.2.1",
        "@types/jest": "^26.0.3",
        "@types/jest-each": "^24.3.0",
        "@types/lodash": "^4.14.198",
        "@types/node": "^17.0.38",
        "@types/p-queue": "^3.2.1",
        "@types/papaparse": "^5.2.6",
        "@types/proj4": "^2.5.2",
        "@types/socket.io-client": "^1.4.36",
        "@types/socketio-wildcard": "^2.0.4",
        "@types/uuid": "^8.3.1",
        "@types/workerpool": "^6.1.0",
        "@typescript-eslint/eslint-plugin": "^5.45.1",
        "@typescript-eslint/parser": "^5.45.1",
        "cross-env": "^7.0.2",
        "eslint": "^8.29.0",
        "eslint-plugin-node": "^11.1.0",
        "jest": "^27.3.1",
        "jest-each": "^27.3.1",
        "jest-fetch-mock": "^3.0.3",
        "prettier-eslint-cli": "^7.1.0",
        "socket.io-client": "^2.4.0",
        "stream-mock": "^2.0.5",
        "ts-jest": "^27.0.7"
    }
}
