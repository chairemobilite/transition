{
  "engines": {
    "node": ">=24.0.0"
  },
  "name": "transition-frontend",
  "version": "0.2.0-2",
  "description": "Transportation and travel survey analysis and simulation platform",
  "repository": "github.com/chairemobilite/transition",
  "license": "MIT",
  "scripts": {
    "build:dev": "cross-env NODE_OPTIONS=\"--trace-deprecation --max_old_space_size=4096 --openssl-legacy-provider\" webpack watch --progress --color --mode development --node-env development",
    "build:prod": "cross-env NODE_OPTIONS=\"--trace-deprecation --max_old_space_size=4096 --openssl-legacy-provider\" webpack --progress --color --mode production --node-env production",
    "build:test": "cross-env NODE_OPTIONS=\"--openssl-legacy-provider\" webpack watch --mode development --progress --color --node-env test",
    "compile": "tsc && yarn copy-files",
    "compile:dev": "yarn copy-files && tsc -w",
    "clean": "rimraf lib/",
    "copy-files": "copyfiles -u 1 -V ./src/assets/images/icons/**/* ./src/assets/images/icons/**/**/* src/styles/*.scss ./lib/",
    "test": "cross-env NODE_ENV=test jest --config=jest.config.js",
    "test:unit": "cross-env NODE_ENV=test jest --config=jest.config.js",
    "test:sequential": "echo 'cross-env NODE_ENV=test jest --config=jest.sequential.config.js --runInBand'",
    "test:ui": "LOCALE_DIR=$(pwd)/locales npx playwright test",
    "lint": "eslint .",
    "format": "prettier-eslint \"./src/**/*.{ts,tsx}\" --write"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.1.1",
    "@mapbox/mapbox-gl-draw": "^1.4.3",
    "@turf/turf": "^7.3.1",
    "chaire-lib-common": "^0.2.2",
    "chaire-lib-frontend": "^0.2.2",
    "date-fns": "^4.1.0",
    "element-resize-event": "^3.0.6",
    "geojson": "^0.5.0",
    "i18next": "^25.7.3",
    "lodash": "^4.17.21",
    "mapbox-gl": "chairemobilite/mapbox-gl-js#39bbf9aeb1859424e29cff2584715fddc9d018b9",
    "moment": "^2.30.1",
    "papaparse": "^5.5.3",
    "rc-menu": "^9.16.1",
    "react": "^19.2.3",
    "react-collapsible": "^2.10.0",
    "react-datepicker": "^9.1.0",
    "react-dom": "^19.2.3",
    "react-i18next": "^16.5.0",
    "react-mathjax": "^1.0.1",
    "react-modal": "^3.16.3",
    "react-redux": "^9.2.0",
    "react-router": "^7.12.0",
    "react-spinners": "^0.17.0",
    "react-table": "^7.8.0",
    "react-tabs": "^6.1.0",
    "react-tooltip": "^5.28.0",
    "redux": "^5.0.1",
    "slugify": "^1.6.6",
    "socket.io-client": "^4.8.1",
    "timezone": "^1.0.23",
    "transition-common": "0.2.0-2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@alienfast/i18next-loader": "^2.0.2",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/geojson": "^7946.0.16",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.21",
    "@types/mapbox-gl": "^2.3.1",
    "@types/node": "^24.10.4",
    "@types/react-dom": "^19.0.2",
    "@types/react-mathjax": "^1.0.4",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "clean-webpack-plugin": "^4.0.0",
    "compression-webpack-plugin": "^11.1.0",
    "copy-webpack-plugin": "^13.0.1",
    "copyfiles": "^2.4.1",
    "cross-env": "^10.1.0",
    "css-loader": "^7.1.2",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.1",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-react": "^7.37.2",
    "html-webpack-plugin": "^5.6.5",
    "jest": "^30.2.0",
    "json-loader": "^0.5.7",
    "mini-css-extract-plugin": "^2.9.4",
    "prettier-eslint-cli": "^8.0.1",
    "rimraf": "^6.1.2",
    "sass": "^1.94.2",
    "sass-loader": "^16.0.6",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-shader-loader": "^2.0.2",
    "typescript": "^5.9.3",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  }
}
