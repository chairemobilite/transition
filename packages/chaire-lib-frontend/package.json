{
  "engines": {
    "node": ">=24.0.0"
  },
  "name": "chaire-lib-frontend",
  "version": "0.2.2",
  "description": "Library for chaire mobilite's applications",
  "repository": "github.com/chairemobilite/transition",
  "license": "MIT",
  "scripts": {
    "compile": "tsc && yarn copy-files",
    "compile:dev": "tsc -w",
    "clean": "rimraf lib/",
    "copy-files": "copyfiles -u 1 src/styles/*.scss lib/ && copyfiles -u 1 -e ./assets/icons/sources/* -e ./assets/icons/**/sources/* -e ./assets/icons/**/**/sources/* ./assets/icons/**/* ./assets/icons/**/**/* ./lib/assets/",
    "test": "cross-env NODE_ENV=test jest --config=jest.config.js",
    "test:unit": "cross-env NODE_ENV=test jest --config=jest.config.js",
    "test:sequential": "echo 'cross-env NODE_ENV=test jest --config=jest.sequential.config.js --runInBand'",
    "test:ui": "echo 'cross-env NODE_ENV=test jest --config=jest.ui.config.js'",
    "lint": "eslint .",
    "format": "prettier-eslint \"./src/**/*.{ts,tsx}\" --write"
  },
  "dependencies": {
    "@casl/ability": "^6.7.3",
    "@fortawesome/fontawesome-svg-core": "^6.7.1",
