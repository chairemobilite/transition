    "i18next-http-backend": "^3.0.1",
    "lodash": "^4.17.21",
    "mapbox-gl": "chairemobilite/mapbox-gl-js#39bbf9aeb1859424e29cff2584715fddc9d018b9",
    "moment": "^2.30.1",
    "papaparse": "^5.5.2",
    "react": "^19.0.0",
    "react-collapsible": "^2.10.0",
    "react-color": "^2.19.3",
    "react-datepicker": "^7.6.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^12.3.1",
