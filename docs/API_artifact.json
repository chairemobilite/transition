{
    "openapi": "3.1.0",
    "info": {
        "title": "Transition API",
        "version": "v1"
    },
    "servers": [{
        "url": "http://localhost:8080/"
    }],
    "paths": {
        "/api/paths": {
            "post": {
                "tags": ["Transition Objects"],
                "description": "Returns all paths which are currently loaded in Transition.",
                "responses": {
                    "200": {
                        "description": "All paths currently loaded in Transition in GeoJSON format.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Paths"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "nodes": {
        "/api/nodes": {
            "post": {
                "tags": ["Transition Objects"],
                "description": "Returns all nodes which are currently loaded in Transition.",
                "responses": {
                    "200": {
                        "description": "All nodes currently loaded in Transition in GeoJSON format.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Nodes"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Paths": {
                "type": "object",
                "properties": {
                    "geojson": {
                        "type": "object",
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": ["FeatureCollection"]
                            },
                            "features": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "format": "int32",
                                            "minimum": 0,
                                            "examples": [367]
                                        },
                                        "type": {
                                            "type": "string",
                                            "enum": ["Feature"]
                                        },
                                        "geometry": {
                                            "type": "object",
                                            "properties": {
                                                "type": {
                                                    "type": "string",
                                                    "enum": ["LineString"]
                                                },
                                                "coordinates": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "array",
                                                        "items": {
                                                            "type": "number"
                                                        },
                                                        "minItems": 2,
                                                        "maxItems": 2
                                                    },
                                                    "examples": [[
                                                        [
                                                            -73.461867011,
                                                            45.494932982
                                                        ],
                                                        [
                                                            -73.490097701,
                                                            45.499422248
                                                        ]
                                                    ]]
                                                }
                                            }
                                        },
                                        "properties": {
                                            "type": "object",
                                            "additionalProperties": true
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}